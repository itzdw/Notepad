@import "./variable"
@import './mixin'

*
    box-sizing border-box

h1
h2
h3
h4
h5
h6
    font-size 100%
    font-weight normal

img
    display block

ul
    list-style-type none
a
    color $color-theme

em
i
u
b
    font-style normal

//重置按钮样式
input
    border-radius 0
    border none 
    background-color transparent
    &:focus
        outline 0  

//重置button样式
button
    border 2px solid $color-white
    border-radius 0
    background-color $color-white 
    font-size 30px

//重置select样式
.select-wrapper
    position relative
    border 2px solid $color-theme
    height 55px
    line-height 55px
    border-radius 5px
    min-width 150px
    padding-top 5px
    padding-bottom 5px
    select
    option
        border none
        color $color-theme
        height 50px
        line-height 50px
        border-radius 5px
        min-width 200px
        padding-left 20px
        font-size 30px
        background-color transparent
        -webkit-appearance none
        &:focus
            outline 0
    &:after
        content ""
        position absolute
        z-index -1
        right 15px
        top 5px
        width 20px
        height 20px
        border-top 2px solid $color-theme
        border-left 2px solid $color-theme
        transform rotate(225deg)